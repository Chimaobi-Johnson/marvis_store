<%- include('../includes/head.ejs') %>

<%- include('../includes/header.ejs') %>


<section class="register-container">
    <div class="row align-flexstart">
        <div class="col-2-of-3">
            <div class="registeration-container__form">
                <h3>REGISTERED CUSTOMERS</h3>
                <p>If you have an account with us, please log in</p>
                <div class="alert alert-error">
                    <p>Sorry operation is not possible</p>
                </div>
                <form action="/register" method="POST">
                <div class="row mb-20">
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="firstName">First Name</label>
                            <input class="text-input" type="text" placeholder="Enter First Name" value="<%= oldInput.firstName %>" name="firstName" id="firstName" />
                        </div>
                    </div>
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="lastName">Last Name</label>
                            <input class="text-input" type="text" value="<%= oldInput.lastName %>" placeholder="Enter Last Name" name="lastName" id="lastName" />
                        </div>
                    </div>
                </div>
                <div class="row mb-20">
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="email">E-mail</label>
                            <input class="text-input" type="email" value="<%= oldInput.email %>" placeholder="Enter E-mail" name="email" id="email" />
                        </div>
                    </div>
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="gender">Gender</label>
                            <select class="text-input" id="gender" name="gender" value="<%= oldInput.gender %>">
                                <option value=""></option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mb-20">
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="password">Password</label>
                            <input class="text-input" value="<%= oldInput.password %>" type="password" placeholder="Enter Password" name="password" id="password" />
                        </div>
                    </div>
                    <div class="col-1-of-2">
                        <div class="form-control">
                            <label class="text-label" for="confirmPassword">Confirm Password</label>
                            <input class="text-input" type="password" value="<%= oldInput.confirmPassword %>" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword" />
                        </div>
                    </div>
                </div>
                

                <div class="form-control justify-flexstart mt-30">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="submit" class="btn-regular btn-md" value="Register" />
                </div>

            </form>

            </div>
        </div>
        <div class="col-1-of-3">
            <div class="registeration-container__info">
                <h1>LOGIN OR CREATE AN ACCOUNT</h1>
                <h3>NEW CUSTOMERS</h3>
                <p>By creating an account with our store, you will be able to move 
                    through the checkout process faster, store multiple shipping addresses, 
                    view and track your orders in your account and more.</p>
                <a href="/login" class="btn-regular">Login</a>
            </div>
        </div>
    </div>
</section>


<%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>