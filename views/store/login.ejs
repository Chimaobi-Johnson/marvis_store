<%- include('../includes/head.ejs') %>

<%- include('../includes/header.ejs') %>


<section class="login-container">
    <div class="row align-flexstart">
        <div class="col-1-of-2">
            <div class="login-container__info">
                <h1>LOGIN OR CREATE AN ACCOUNT</h1>
                <h3>NEW CUSTOMERS</h3>
                <p>By creating an account with our store, you will be able to move 
                    through the checkout process faster, store multiple shipping addresses, 
                    view and track your orders in your account and more.</p>
                <a href="/register" class="btn-regular">Create an account</a>
            </div>
        </div>
        <div class="col-1-of-2">
            <div class="login-container__form">
                <h3>REGISTERED CUSTOMERS</h3>
                <p>If you have an account with us, please log in</p>
                <form action="/login" method="POST">
                    <div class="form-control">
                        <label class="text-label" for="email">E-mail</label>
                        <input class="text-input" type="email" placeholder="Enter E-mail" name="email" id="email" />
                    </div>
                    <div class="form-control">
                        <label class="text-label" for="password">Password</label>
                        <input class="text-input" type="password" placeholder="Enter Password" name="password" id="password" />
                    </div>
                    <div class="form-control justify-flexstart mt-50">
                        <input type="submit" class="btn-regular btn-md" value="Login" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>