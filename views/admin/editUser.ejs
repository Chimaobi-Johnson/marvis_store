
<%- include('../includes/admin/head.ejs') %>


<div class="dashboard-wrapper">
    
    <%- include('../includes/admin/sidebar.ejs') %>

    <div class="dashboard-content">

        <%- include('../includes/admin/header.ejs') %>

        <div class="dashboard-content__main">

            <%- include('../includes/admin/greeting.ejs') %> 

            <div class="admin-breadcrumb align-flexstart">
                <div>Dashboard</div>
                <div>/</div>
                <div>Edit User</div>
            </div>
            <div class="product-form-container">

                <form class="add-user-form align-flexstart" action="/admin/user/edit" method="POST">
                    <% if(flashMessage) { %>
                        <div class="alert alert-success">
                            <p><%= flashMessage %> </p>
                        </div>
                    <% } %> 

                    <% if (errorMessage) { %>
                        <div class="alert alert-error">
                            <p><%= errorMessage %> </p>
                        </div>
                    <% } %>

                    <div class="add-user-form__left">
                        <div class="form-control">
                            <label class="text-label" for="firstName">First Name</label>
                            <input class="text-input" type="text" placeholder="Enter irst Name" value="<%= oldInput.firstName %>" name="firstName" id="firstName" />
                        </div>
                        <div class="form-control">
                            <label class="text-label" for="lastName">Last Name</label>
                            <input class="text-input" type="text" placeholder="Enter Last Name" value="<%= oldInput.lastName %>" name="lastName" id="lastName" />
                        </div>
                        <div class="form-control">
                            <label class="text-label" for="email">E-mail</label>
                            <input class="text-input" type="email" placeholder="Enter E-mail" value="<%= oldInput.email %>" name="email" id="email" />
                        </div>
                        <div class="form-control">
                            <label class="text-label" for="gender">Gender</label>
                            <select class="text-input" id="gender" name="gender" value="<%= oldInput.gender %>">
                                <option value=""></option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="form-control">
                            <label class="text-label" for="address">Address</label>
                            <textarea name="address" value="<%= oldInput.address %>" class="text-input"></textarea>
                        </div>

                        <div class="form-control">
                            <label class="text-label" for="country">Country</label>
                            <input class="text-input" type="text" value="<%= oldInput.country %>" placeholder="Enter Country" name="country" id="country" />
                        </div>

                        <!-- <div class="form-control">
                            <label class="text-label" for="password">Password</label>
                            <input class="text-input" type="password" placeholder="Enter Password" name="password" id="password" />
                        </div>
                        <div class="form-control">
                            <label class="text-label" for="confirmPassword">Confirm Password</label>
                            <input class="text-input" type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword" />
                        </div> -->

                        <div class="form-control justify-flexstart mt-70">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <input type="submit" class="btn btn-default btn-md" value="Update" />
                        </div>
                    </div>
                    <div class="add-user-form__right">
                        <div class="form-control">
                            <label class="text-label" for="role">Role</label>
                            <select class="text-input" id="role" name="role" value="">
                                <option value=""></option>
                                <option value="admin">Admin</option>
                                <option value="editor">Editor</option>
                                <option value="suscriber">Suscriber</option>
                            </select>
                        </div>
                        <div class="form-control">
                            <label class="text-label" for="userImage">User Image</label>
                            <input type="file" class="text-input" name="userImage" id="userImage" />
                        </div>
                        <!-- <div class="add-user-image__view">
                            <img src="" alt="" />
                        </div> -->
                    </div>

                </form>

            </div>

        </div>
        
     </div> <!-- end of dashboard content -->


</div>


<%- include('../includes/admin/end.ejs') %>
